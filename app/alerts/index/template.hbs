<section class="header clearfix">
  <div class="pull-left pt-10"><h1>{{t 'nav.tools.alerts'}}</h1></div>
  <div class="right-buttons">
    <div class="btn-group-sm" >
      {{#link-to (query-params alertState="all")  classNames="btn btn-sm bg-default m-0"}}{{t 'nav.tools.all'}}{{/link-to}}
      {{#link-to (query-params alertState="active") classNames="btn btn-sm bg-default m-0"}}{{t 'nav.tools.active'}}{{/link-to}}
    </div>
    {{#link-to "alerts.new" classNames="btn btn-sm bg-primary"}}{{t 'nav.tools.addAlert'}}{{/link-to}}
  </div>
</section>

<section class="instances">
  {{#sortable-table
    tableClassNames="bordered"
    classNames="grid sortable-table"
    bulkActions=false
    paging=true
    fullRows=true
    search=true
    sortBy=sortBy
    headers=headers
    body=filteredAlerts
    fullRows=true
    as |sortable kind row dt|
  }}
    {{#if (eq kind "row")}}
      {{alert-row model=row isLocal=isLocal}}
    {{else if (eq kind "nomatch")}}
      <tr>
        <td colspan="{{sortable.fullColspan}}" class="text-center text-muted pt-20 pb-20">{{t 'alertsPage.index.table.noMatch'}}</td>
      </tr>
    {{else if (eq kind "norows")}}
      <tr>
        <td colspan="{{sortable.fullColspan}}" class="text-center text-muted pt-20 pb-20">{{t 'alertsPage.index.table.noData'}}</td>
      </tr>
    {{/if}}
  {{/sortable-table}}
</section>
