<tr class="main-row">
  {{#if bulkActions}}
    <td valign="middle" class="row-check" style="padding-top: 2px;">
      {{check-box nodeId=model.id}}
    </td>
  {{/if}}

  <td>
    <i
      role="button"
      {{action "toggle"}}
      class="icon icon-play eased text-small text-muted {{if expanded 'icon-rotate-90'}}"
    >
      <span class="visually-hidden">open accordion</span>
    </i>
  </td>

  <td data-title="{{dt.timestamp}}" >
    {{fromNow}}
  </td>
  <td data-title="{{dt.log}}" class="clip pr-40">
    {{_log}}
  </td>
  <td data-title="{{dt.containerName}}" class="clip">
    {{model.containerName}}
  </td>
</tr>

<tr class="sub-row {{unless expanded 'hide'}}">
  <td colspan="2">{{timestamp}} </td>
  <td colspan="{{fullColspan}}">{{_log}}</td>
  <td>{{! container name}}</td>
</tr>

{{#if expanded}}
  <tr class="separator-row">
    <td colspan="{{fullColspan}}"></td>
  </tr>
{{/if}}