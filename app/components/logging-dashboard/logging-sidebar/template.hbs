<div class="box">
  <div class="input-group">
    <span class="input-group-addon bg-primary icon icon-history"></span>
    {{new-select
        class="input-sm"
        value=quickTimeIdx
        content=quickTimes
        optionValuePath="idx"
    }}
  </div>
  <div class="mv-20">
    <div class="acc-label pt-0 mt-0">Interval</div>
    {{new-select
        class="input-sm text-capitalize"
        value=intervalId
        content=intervals
        optionValuePath="id"
    }}
    {{#if shortTips}}
      <p class="text-info pt-0 mt-5 text-small">{{shortTips}}</p>
    {{/if}}
  </div>
</div>