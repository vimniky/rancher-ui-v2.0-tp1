<section class="row">
  <div class="col span-6 mr-0">
    <div><label class="acc-label pl-50">Target{{field-required}}</label></div>
    <div class="input-group">
      <div class="input-group-addon pl-0">When</div>
      {{alert/form-target model=model}}
    </div>
  </div>
  {{#if (eq model.targetType 'pod')}}
    <div class="col span-6">
      <div style="padding: 34px 0 0 15px">is unhealthy</div>
    </div>
  {{else if (eq model.targetType 'node')}}
    <div class="col span-6 pl-0">
      <div class="acc-label" style="padding-left: 34px">Node condition</div>
      <div class="input-group">
        <span class="input-group-addon">is</span>
        {{new-select content=model.nodeRules value=model.nodeRule.condition}}
      </div>
    </div>
  {{else}}
    <div class="col span-6 ml-0" style="padding-top:32px">
      <div class="input-group p-0">
        <span class="input-group-addon">are</span>
        {{input-slider
            value=percent
            valueMin=0
            valueMax=100
            step=1
        }}
        <span class="input-group-addon">{{if percent percent 0}}%  unavailable</span>
      </div>
    </div>
  {{/if}}
</section>