<div class="row nav nav-boxes checked-current mv-30">
  {{#each targets as |target|}}
    {{#if target.available}}
      {{#link-to "logging" (query-params targetType=target.type)
        alt=target.label
        classNames=(concat "col span-2 nav-box-item driver logging-target " target.css)
        disabled=target.disabled
        href=false
      }}
        <p>{{target.label}}</p>
      {{/link-to}}
    {{/if}}
  {{/each}}
</div>

<section>
  <div class="text-center text-muted">
    {{#if hasCurrentTarget}}
      The current logging target is <code class="text-capitalize">{{currentTarget}}</code>,
      {{#unless (eq currentTarget targetType)}}
        click the save buttom below to set <span class="text-info text-capitalize">{{targetType}}</span> as the logging target.
      {{else}}
        click the save buttom below to update the <span class="text-info text-capitalize">{{targetType}}</span> configuration.
      {{/unless}}
    {{else}}
      Don't have a logging target yet, click the save buttom below to set <code class="text-capitalize">{{targetType}}</code> as the logging target.
    {{/if}}
  </div>
  <hr/>
</section>